<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/app_music_back2"
              android:orientation="vertical"
              android:scaleType="centerCrop">

    <Button
        android:id="@+id/start_saomiao_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:background="@color/steelblue"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp"
        android:text="扫描歌曲"
        android:textColor="@color/ivory"
        android:textSize="18sp"/>

    <ListView
        android:id="@+id/music_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <RelativeLayout
        android:id="@+id/relayout_id"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/steelblue">

        <ImageView
            android:id="@+id/music_below_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/music_img"/>

        <ImageView
            android:id="@+id/next_below_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/player_btn_next"/>


        <ImageView
            android:id="@+id/paly_below_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/next_below_img"
            android:gravity="center"
            android:src="@drawable/player_btn_play"/>

        <ImageView
            android:id="@+id/prce_below_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/paly_below_img"
            android:gravity="center"
            android:src="@drawable/player_btn_pre"/>


        <TextView
            android:id="@+id/name_below_txt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/music_below_img"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@id/prce_below_img"
            android:layout_toRightOf="@id/music_below_img"
            android:singleLine="true"
            android:text="歌名"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/artist_below_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_below_txt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@id/prce_below_img"
            android:layout_toRightOf="@id/music_below_img"
            android:singleLine="true"
            android:text="作者"
            android:textColor="@color/white"
            android:textSize="17sp"/>

    </RelativeLayout>

</LinearLayout>

    <!--<com.zhangli.myapplication.utils.ClickHavaCircle-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"/>-->

    </FrameLayout>